<%- include("../header.ejs")%>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1>
                    Liste des Produits
                </h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mb-4 mt-4">
                <a class="btn btn-primary" href="/product/new">New Product</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Price (DH)</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0 ; i<products.length; i++ ){ %>
                            <tr>
                                <td>
                                    <%=products[i].id%>
                                </td>
                                <td>
                                    <%=products[i].name%>
                                </td>
                                <td>
                                    <%=products[i].price%>
                                </td>
                                <td>
                                    <a class="btn btn-dark" href="/product/<%=products[i].id%>">
                                        Afficher
                                    </a>
                                    <a class="btn btn-success" href="/product/<%=products[i].id%>/edit">
                                        Editer
                                    </a>
                                    <a class="btn btn-danger" href="/product/<%=products[i].id%>/delete">
                                        Supprimer
                                    </a>
                                </td>
                            </tr>
                            <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include("../footer.ejs")%>